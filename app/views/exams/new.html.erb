<div class="main">
  <div class="inner">
    <div class="image__header">
      <%= image_tag"exam.png", class: :image__header__image %><br><br>
      <h2 class="heading">新規試験作成</h2><br>
      <div class="form__wrapper">

      <%= form_with model: @exam, url: exams_path(:exam_id) do |f| %>
      <%= render 'devise/shared/error_messages', model: f.object %>
        <div class="weight-bold-text">
          試験に名前をつけて下さい
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :title, class:"choice__text", id:"question_content", placeholder:"例:) 試験問題", rows:"1", cols:"50", maxlength:"255" %>
        <div class="new-question">
        <div class="weight-bold-text">
          試験の説明文を入力して下さい
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :message, class:"choice__text", id:"question_content", placeholder:"例:) 注意事項", rows:"5", cols:"70", maxlength:"1024" %>
        <div class="new-question">

        <br>作成した問題の中から試験に使用するものを選択して下さい<br>
        <% if Question.exists?(user_id: current_user.id) %>
          <div class="exam__question">
            <%= f.collection_check_boxes :question_ids, Question.where(user_id: current_user.id), :id, :content %>
          </div>
            <div class="sell-btn-contents">
              <%= f.submit "作成する", class: :nav__btn %>
              <%=link_to 'もどる', root_path, class: :nav__logout %>
            </div>
          <% else %><br>
            <h2 class="heading">※先に問題を作成して下さい</h2>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>