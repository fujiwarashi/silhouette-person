<div class="main">
  <div class="inner">
    <div class="image__header">
      <%= image_tag"question.png", class: :image__header__image %>
      <h2 class="heading">新規問題作成</h2><br>
        <div class="form__wrapper">
        <%= form_with model:@question_choice, url: questions_path, local: true do |f| %>
        <%= render 'devise/shared/error_messages', model: f.object %>
